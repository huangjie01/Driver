<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="12dp">

    <!--全部标签时显示福利图-->
    <ImageView
        android:id="@+id/iv_all_welfare"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/ll_welfare_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/android_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:lineSpacingExtra="4dp"
            android:text="wocaoc"
            android:textColor="@color/colorContent"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/android_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/android_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12324123"
            android:textColor="@color/colorSubtitle"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/android_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/android_author"
            android:text="dsdsddsd"
            android:textColor="@color/colorSubtitle"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/android_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1993.12.03"
            android:textColor="@color/colorSubtitle"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="6dp"
        android:background="@color/colorLineItem" />

    <!--android:background="@color/colorLineDeep"-->
</LinearLayout>